{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["app/components/*"],
      "tools/*": ["app/tools/*"],
      "hooks/*": ["app/hooks/*"],
      "scss/*": ["app/scss/*"],
      "core/*": ["app/core/*"]
    }
  },
  "include": ["app/**/*"]
}